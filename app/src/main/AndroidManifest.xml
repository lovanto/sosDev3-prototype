<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lovanto.sosdev">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.lovanto.sosdev.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.lovanto.sosdev.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup">
        <activity android:name=".view.SettingActivity"></activity>

        <provider
            android:name=".provider.FavouriteProvider"
            android:authorities="com.lovanto.sosdev"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.lovanto.sosdev.READ_DATABASE"
            android:writePermission="com.lovanto.sosdev.WRITE_DATABASE" />

        <activity android:name=".view.FavActivity" />
        <activity android:name=".view.DetailActivity" />
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".alarm.AlarmReceiver"
            android:enabled="true"
            android:exported="true" />

    </application>

</manifest>